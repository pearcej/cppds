    alist.append(0) #required for indexing in the class methods!!

    bh = BinHeap(alist);

    bh.insert(5);
    bh.insert(7);
    bh.insert(3);
    bh.insert(11);

    print(bh.delMin())
    print(bh.delMin())
    print(bh.delMin())
